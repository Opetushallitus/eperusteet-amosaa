div.modal-header
  h2(ng-show="obj.tyyppi === 'tutkinnonosa'" kaanna="'otsikko-tutkinnonosa'")
  h2(ng-show="obj.tyyppi === 'tutkinnonosaryhma'" kaanna="'otsikko-tutkinnonosaryhma'")
  h2(ng-show="obj.tyyppi === 'suorituspolku'" kaanna="'otsikko-suorituspolku'")
  h2(ng-show="obj.tyyppi === 'tekstikappale'" kaanna="'otsikko-tekstikappale'")
  h2(ng-show="!obj.tyyppi" kaanna="'lisaa-sisaltoa'")

div.modal-body.modal-sisalto
  div.sisalto-valinta(ng-hide="obj.tyyppi")
    div(ng-repeat="tyyppi in sallitut")
      div.sisalto-item
        .pull-right.sisalto-valinta
          button.btn.btn-primary(kaanna="'lisaa'" ng-click="valitse(tyyppi)" ng-disabled="tyyppi === 'tutkinnonosaryhma' || tyyppi === 'suorituspolku'")
          button.btn.btn-primary(kaanna="'tuo'" disabled)
        span.sisalto-icon
          +icon("file-text-o")
        div.sisalto-text
          span(kaanna="'sisaltotyyppi-' + tyyppi")

  div.sisalto-tekstikappale(ng-show="obj")
    h3(kaanna="'anna-nimi'")
    input.form-control(slocalized ng-model="obj.tekstiKappale.nimi" type="text" required="true")

div.modal-footer
  button.btn.btn-default(ng-click="ok()")
    span(kaanna="'peruuta'")
  button.btn.btn-primary(ng-disabled="!obj || !obj.tyyppi" ng-click="ok(obj)")
    span(kaanna="'lisaa'")
