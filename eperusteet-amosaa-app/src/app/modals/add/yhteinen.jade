div.modal-header
  h2.pull-left(kaanna="'lisaa-yhteinen'")
  .pull-right
    +kielivalitsin
  .clearfix

div.modal-body.modal-sisalto
  div(ng-hide="pohjat.length > 0")
    div.alert.alert-warning
      div(kaanna="'yhteisien-osien-pohjia-ei-viela-luotu'")

  .content-spacing(ng-show="pohjat.length > 1")
    h3(kaanna="'valitse-pohja'")
    div.select-list
      div.select-item(ng-repeat="pohja in pohjat" ng-click="valitsePohja(pohja)")
        input.form-control(type="radio" ng-checked="valittuPohja === pohja")
        div.select-label(kaanna="pohja.nimi")

  .content-spacing(ng-show="valittuPohja")
    h3(kaanna="'anna-nimi'")
    input.form-control(slocalized ng-model="yhteinen.nimi" type="text" required="true")

div.modal-footer
  button.btn.btn-default(ng-click="peruuta()")
    span(kaanna="'peruuta'")
  button.btn.btn-primary(ng-click="ok(yhteinen)")
    span(kaanna="'lisaa'")
