div.modal-header
  h2(kaanna="'lisaa-pohja'")

div.modal-body.modal-sisalto
  h3(kaanna="'anna-nimi'")
  input.form-control(slocalized ng-model="pohja.nimi" type="text" required="true")

div.modal-footer
  button.btn.btn-default(ng-click="ok()")
    span(kaanna="'peruuta'")
  button.btn.btn-primary(ng-click="ok(pohja)")
    span(kaanna="'lisaa'")
