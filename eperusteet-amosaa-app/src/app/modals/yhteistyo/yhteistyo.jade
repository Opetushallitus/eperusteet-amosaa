.modal-header
  h3(ng-bind="'yhteistyon-sallivat-koulutustoimijat' | kaanna")


.modal-body
  // div.form-group.has-feedback.has-feedback-left
    input.form-control(ng-change="orgPaginatedUpdate(orgSearch)"
      type="text"
      ng-model="orgSearch"
      ng-model-options="{ debounce: 300 }"
      placeholder="{{ 'suodata' | kaanna }}")
    i.form-control-feedback.glyphicon.glyphicon-search(style="color: gray;")
  p(ng-bind-html="'yhteistyo-ohje' | kaanna")
  table.table.table-striped
    tr
      th(ng-bind="'nimi' | kaanna")
      th(ng-bind="'toiminto' | kaanna")
    tr(ng-if="org.id !== koulutustoimija.id" ng-repeat="org in organisaatiot")
      td(ng-bind="org.nimi | kaanna")
      td
        button.btn.btn-sm.btn-primary(ng-click="ok(org)")
          span(ng-bind="'laheta-kaveripyynto' | kaanna")

