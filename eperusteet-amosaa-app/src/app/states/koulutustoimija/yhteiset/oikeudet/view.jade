div.poistetut
  // pre(ng-bind="oikeudet | json")

  div.row
    div.col-xs-6
      h2(kaanna="'oikeudet'")
        ohje(teksti="this is a test" otsikko="test title" suunta="top")
    div.col-xs-6
      div.input-group.input-group-sm
        span.input-group-btn
          button.btn.btn-default(ng-click="nimi = ''")
            +icon("plus")
        input.form-control(
          type="text"
          placeholder="{{'haku-nimi' | kaanna}}"
          ng-model="nimi"
          ng-change="paivita()")

  div.row
    div.col-xs-12
      table.table.table-striped
        thead
          tr
            th
              a(href="")
                span(kaanna="'henkilo-nimi'")
                span(ng-show="jarjestys === 'nimi'")
            th
              a(href="")
                span(kaanna="'oikeus'")
        tbody
          tr(ng-repeat="oikeus in oikeudet")
            td
              span(ng-show="oikeus.$$kayttajanimi" ng-bind="oikeus.$$kayttajanimi")
              span(ng-hide="oikeus.$$kayttajanimi" kaanna="'haetaan-kayttajanimea'")
            td
              span(ng-bind="'oikeus-' + oikeus.oikeus | kaanna")
