div.kasitteet
  div.row
    div.col-xs-6
      h2(ng-bind="'kasitteet' | kaanna")
        ohje(teksti="this is a test", otsikko="test title", suunta="top")
    div.col-xs-6
      div.input-group.input-group-sm
        input.form-control(type="text", placeholder="{{'haku-termi' | kaanna}}", ng-model="termi" ng-change="paivita()")
        span.input-group-btn
          button.btn.btn-default(ng-click="nimi = ''")
            i.fa.fa-times

  div.row
    div.col-xs-12
      table.table.table-striped.kasitteet-table
        thead
          tr
            th
              a(href="", ng-click="vaihdaJarjestys('Termi')")
                span(kaanna="'termi'")
                span(ng-show="jarjestys==='termi'")=" "
                span.glyphicon.glyphicon-sort-by-alphabet-alt(ng-show="jarjestysKaanteinen")
                span.glyphicon.glyphicon-sort-by-alphabet(ng-show="!jarjestysKaanteinen")
            th
              a(href="", ng-click="vaihdaJarjestys('Selitys')")
                span(kaanna="'selitys'")
                span(ng-show="jarjestys==='selitys'")=" "
                span.glyphicon.glyphicon-sort-by-alphabet-alt(ng-show="jarjestysKaanteinen")
                span.glyphicon.glyphicon-sort-by-alphabet(ng-show="!jarjestysKaanteinen")
        tbody
          tr(ng-repeat="kasite in kasitteet")
            td
              div(ng-if="$$ekEditing && ($index === selected.value)")
                input.form-control(slocalized ng-model="kasite.termi" type="text" required=true)
              div(ng-show="!$$ekEditing && ($index !== selected.value)")
                p(ng-bind-html="kasite.termi | kaanna")
            td
              div(ng-if="$$ekEditing && ($index === selected.value)")
                div.form-control.ckeditor(ckeditor ng-model="kasite.selitys" slocalized layout="normal")
              div(ng-show="!$$ekEditing && ($index !== selected.value)")
                p(ng-bind-html="kasite.selitys | kaanna")
            td(ng-show="!$$ekEditing")
              a.btn.btn-warning.btn-sm.pull-right.btn-small-margin-left
                i.fa.fa-trash(ng-click="delete(kasite)")
              a.btn.btn-primary.btn-sm.pull-right(ng-click="kasite.$$edit(); selected.value = $index")
                i.fa.fa-pencil


  nav.text-center
    uib-pagination(
    ng-model="sivu",
    total-items="kasitteet.length",
    items-per-page="alkioitaSivulla",
    force-ellipses="true",
    direction-links="false"
    )