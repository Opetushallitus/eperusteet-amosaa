div.ops-nakyma
  div.row
    div.col-xs-12
      div.ylatunniste(class="{{ 'ylatunniste-' + ops.tyyppi }}")
        a.pull-left(href="")
          div.muokkaa
            i.fa.fa-pencil
        div.pull-left
          h2(ng-bind="ops.nimi | kaanna")
          h2
            span
              i.fa.fa-magic

        div.painikkeet
          div.keskitetty.pull-right
            button.btn.btn-default
              span.glyphicon.glyphicon-sunglasses
              span=" "
              span(kaanna="'esikatselu'")


  div.row
    div.col-xs-12
      div.tabit
        ul.nav.nav-tabs
          li(ui-sref-active="active")
            a(ui-sref=".sisalto" kaanna="'sisalto'")
          li(ui-sref-active="active")
            a(ui-sref=".kasitteet" kaanna="'kasitteet'")
          li(ui-sref-active="active")
            a(ui-sref=".poistetut" kaanna="'poistetut'")
          li(ui-sref-active="active")
            a(ui-sref=".oikeudet" kaanna="'oikeudet'" ng-if="ops.tyyppi !== 'pohja'")
          li(ui-sref-active="active")
            a(ui-sref=".dokumentti" kaanna="'dokumentti'" ng-if="ops.tyyppi !== 'pohja'")

  div.row
    div.col-xs-12
      div.ui-view
