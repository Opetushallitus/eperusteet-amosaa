div.dokumentti

  div.row
    div.col-xs-12
      code {{dokumentti}}

  div.row
    div.col-xs-12
      h2(kaanna="'dokumentti'")
      p(ng-if="dokumentti.tila === 'ei_ole'") Dokumenttia ei ole luotu.
      div(ng-if="dokumentti.tila === 'valmis'")
        p
          span luoja: Sorsa Seppo
          span=" "
          span luotu: 25.3.2016 12:30:21

        button.btn.btn-default
          span(kaanna="'lataa'")
          span=" "
          span(kaanna="'pdf'")

  div.row
    div.col-xs-12
      h2(kaanna="'uusi-dokumentti'")
      button.btn.btn-default
        span(kaanna="'luo-uusi-dokumentti'")

      p
        span(kaanna="'luodaan-dokumenttia'")
      div.row
        div.col-xs-8
          div.progress
            div.progress-bar.progress-bar-striped.active(style="width: 33%;")
              span 1 / 3
              span=" "
              span Lisätään kuvat

  div.row
    div.col-xs-12
      h2(kaanna="'lisaasetukset'")

      form.form-horizontal
        div.form-group
          label.col-xs-2(for="kansi")
            span(kaanna="'kansilehti'")
            span=":"
          div.col-xs-10
            input(type="file", id="kansi")
        div.form-group
          label.col-xs-2(for="header")
            span(kaanna="'ylatunniste'")
            span=":"
          div.col-xs-10
            input(type="file", id="header")
        div.form-group
          label.col-xs-2(for="header")
            span(kaanna="'alatunniste'")
            span=":"
          div.col-xs-10
            input(type="file", id="footer")
        div.form-group
          div.col-xs-2
          div.col-xs-10
            button.btn.btn-default
              span(kaanna="'tallenna'")
