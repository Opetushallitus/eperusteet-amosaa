div.otsikkotaso.kaikki-opetussuunnitelmat
  h3 Kaikki opetussuunnitelmat

  div.row
    div.col-xs-5
      div.form-group.has-feedback.has-feedback-left
        input.form-control(type="text")
        i.form-control-feedback.glyphicon.glyphicon-search(style="color: gray;")
    div.checkbox-text.col-xs-5
      div.checkbox
        label
          input(type="checkbox")
          span Tarkennettu haku
    div.col-xs-2
      div.pull-right
        button.btn.btn-default(kaanna="'lisaa-uusi'" ng-click="addOpetussuunnitelma()")

  table.table.boxtable
    thead
      tr
        th
        th
          a(href="#") TUTKINNON NIMI&nbsp;
            span.glyphicon.glyphicon-sort-by-attributes
        th
          a(href="#") Osaamisala&nbsp;
            span.glyphicon.glyphicon-sort-by-attributes
        th
          a(href="#") TUTKINNON TYYPPI&nbsp;
            span.glyphicon.glyphicon-sort-by-attributes
    tbody
      tr(ng-repeat="ops in opsit.data")
        td
          div
            div(name="state")
            div(name="favourite")
              a(href="#")
                span.glyphicon.glyphicon-star
        td
          div
            a(href="#")
              span.ellipsis(kaanna="ops.nimi")
        td
          div
            span.ellipsis(ng-show="ops.osaamisalat.length > 0", kaanna="ops.osaamisalat[0].nimi")
        td
          div(kaanna="ops.koulutustyyppi")
        td
          div
            a(href="#")
              div(name="go")
                span.glyphicon.glyphicon-chevron-right
